{%- set metaTitle -%}
{%- if not title -%}{{ site.title }} - {{ site.description | safe }}
{%- else -%}{{ title | safe }} | {{ site.title }}
{%- endif -%}
{%- endset -%}
{%- set metaDesc -%}
{%- if not description -%}{{ site.description | safe }}
{%- else -%}{{ description | safe }}
{%- endif -%}
{%- endset -%}
{%- set metaKeywords -%}
{%- if tags -%}
    {%- for tag in tags -%}{{ tag }},{%- endfor -%}
{%- endif -%}
{%- if site.keywords -%}
    {%- for keyword in site.keywords -%}
        {{ keyword }}
        {%- if not loop.last %},{% endif -%}
    {%- endfor -%}
{%- endif -%}
{%- endset -%}
<!DOCTYPE html>
<html>

    <head>
        {% include "gtm/head.njk" %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ metaTitle }}</title>
        <meta name="title" content="{{ metaTitle }}">
        <meta name="description" content="{{ metaDesc }}">
        <meta name="keywords" content="{{ metaKeywords }}">
        <meta name="author" content="{{ author.name }}">
        <meta name="robots" content="index, follow">
        <link rel="canonical" href="{{ site.url | url }}{{ page.url }}">
        <link rel="shortcut icon" type="image/svg+xml" href="{{ '/assets/img/favicon.svg' | url }}">
        <link rel="apple-touch-icon" href="{{ '/assets/img/apple-touch-icon.png' | url }}">
        <link rel="dns-prefetch" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="dns-prefetch" href="https://fonts.gstatic.com">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap">

        {# Include Main CSS #}
        <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
    </head>

    <body class="font-sans bg-slate-900 text-slate-300">
        {% include "gtm/body.njk" %}
        {{ content | safe}}
    </body>

</html>